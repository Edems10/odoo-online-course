<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teacher Group -->
        <record id="group_online_course_teacher" model="res.groups">
            <field name="name">Online Course Teacher</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Student Group -->
        <record id="group_online_course_student" model="res.groups">
            <field name="name">Online Course Student</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
